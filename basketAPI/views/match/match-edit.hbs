<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Editar Partido</h1>

            <hr>

            <form action="/matches/create" method="POST">

                <div class="mb-3">
                    <label for="startTime" class="form-label">Inicio del partido</label>
                    <input type="datetime-local" class="form-control" id="startTime" name="startTime"
                        value="{{startTime}}" required>
                </div>
                <div class="mb-3">
                    <label for="endTime" class="form-label">Finalizaci√≥n del partido</label>
                    <input type="datetime-local" class="form-control" id="endTime" name="endTime" value="{{endTime}}"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Latitud:</label>
                    <input type="text" class="form-control" name="lat" value="{{location.coordinates.[0]}}">
                </div>
                <div class="mb-3">
                    <label class="form-label">Longitud:</label>
                    <input type="text" class="form-control" name="lng" value="{{location.coordinates.[1]}}">
                </div>

                <button type="submit" class="btn btn-dark">Editar</button>
            </form>


            <hr>


        </div>
    </div>


</div>