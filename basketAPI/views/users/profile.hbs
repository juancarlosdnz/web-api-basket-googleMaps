<div class="container">
    {{#with user}}
    <h1>Pefil de {{username}}</h1>
    <p>Email: {{email}}</p>
    <figure>
        <img src={{profileImg}} alt="Imagen de perfil de {{username}}">
    </figure>
    <p>Estatus: {{role}}</p>
    <p>Número de teléfono: {{phoneNumber}}</p>
    {{/with}}
    {{#each commentsOnProfile}}
    <p>-{{comment}}</p>
    {{/each}}
    <form action="/users/{{user._id}}/comment" method="POST">
        <textarea name="comment" id="comment" cols="50" rows="10"></textarea>
        <div>
            <button type="submit" class="btn btn-dark block">Comentar</button>
        </div>
    </form>

</div>